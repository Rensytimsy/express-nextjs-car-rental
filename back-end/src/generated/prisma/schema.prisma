generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  userName   String     @unique
  tel        Int
  firstName  String
  secondName String
  email      String     @unique
  password   String
  isAdmin    Boolean
  vehicle    Vehicles[]
}

model Vehicles {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  owner        Users    @relation(fields: [userId], references: [id])
  model        String
  brand        String
  fuelCapacity Float
  color        String
  images       String[]
  location     Float[]
  price        Float
  duration     Float
  insuarance   String
  mileage      Float
  vehicleType  String
  features     String[]
  available    Boolean
  year         String
}
